{
  "name": "@jchaffin/gh-rag",
  "version": "0.2.2",
  "description": "Hybrid RAG over GitHub repos: BM25 + Pinecone + cited answers.",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gh-rag-ask": "dist/scripts/ask.js",
    "gh-rag-ingest-all": "dist/scripts/ingest-all.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist && find src -type f -name '*.js' -delete && find src -type f -name '*.js.map' -delete",
    "build": "npm run clean && tsc -p tsconfig.lib.json && tsc-alias -p tsconfig.lib.json && tsc -p tsconfig.scripts.json && tsc-alias -p tsconfig.scripts.json",
    "prepublishOnly": "npm run build",
    "smoke": "npm run build && node dist/scripts/smoke.js",
    "start": "node dist/server.js",
    "ingest": "npm run build && node dist/scripts/ingest.js",
    "ask": "node dist/scripts/ask.js",
    "ingest:all": "npm run build && node dist/scripts/ingest-all.js"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.2",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "glob": "^11.0.3",
    "gpt-tokenizer": "^3.0.1",
    "micromatch": "^4.0.8",
    "minimatch": "^10.0.3",
    "minisearch": "^7.1.2",
    "openai": "^5.12.2",
    "p-limit": "^6.2.0",
    "simple-git": "^3.28.0",
    "ts-config": "^20.10.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^24.2.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
